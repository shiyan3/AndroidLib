    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <Button
        android:text="to record video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_to_recordvideo"/>
    <Button
        android:text="to test packtimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_to_packtimer"/>
    <Button
        android:text="to choose video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_to_video"/>

</LinearLayout>